{{> zahlavi }}
<h1 class="mx-3">Přihlášení uživatele</h1>
<div class="container-fluid" style="width: 50%; margin: 0 auto !important;">
    <form method="post" action="prihlaseni" enctype="application/x-www-form-urlencoded">
        <div class="form-group">
            <label class="mx-1 mb-2" for="email">Email</label>
            <input class="form-control mb-3" type="text" id="email" name="email" placeholder="Zadejte email" required>
        </div>
        <div class="form-group">
            <label class="mx-1 mb-2" for="heslo">Heslo</label>
            <input class="form-control mb-3" type="password" id="heslo" name="heslo" placeholder="Zadejte heslo" required>
        </div>
        <button class="btn btn-primary">Přihlásit</button>
    </form>
</div>
{{> zapati }}